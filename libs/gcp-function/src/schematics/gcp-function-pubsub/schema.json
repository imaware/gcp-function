{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "GcpFunction",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "prefix": {
      "description": "Cloud Function trigger",
      "default": "dev",
      "type": "string",
      "minLength": 1,
      "x-prompt": "What function prefix would you like to you?"
    },
    "trigger": {
      "description": "Cloud Function trigger",
      "default": "--trigger-topic",
      "type": "string"
    },
    "triggerTopic": {
      "description": "Cloud Function trigger",
      "default": "",
      "type": "string",
      "minLength": 0,
      "x-prompt": "Which Pub/Sub topic should trigger your function? (default to function name)"
    },
    "runtime": {
      "description": "Cloud Function runtime",
      "default": "nodejs10",
      "type": "string",
      "minLength": 1,
      "x-prompt": "Which runtime would you like to use?"
    },
    "maxInstances": {
      "description": "Maximum instance of cloud functions",
      "default": 10,
      "type": "number",
      "minLength": 1,
      "x-prompt": "What's the maximal quantity of instances?"
    },
    "region": {
      "description": "Cloud Function region",
      "enum": ["us-central1", "us-east1", "us-east4","europe-west1", "europe-west2","asia-east2", "asia-northeast1","europe-west3"],
      "default": "us-central1",
      "type": "string",
      "minLength": 1,
      "x-prompt": "Where should the function be hosted?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    },
    "skipPackageJson": {
      "type": "boolean",
      "default": false,
      "description": "Do not add dependencies to package.json."
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "default": "eslint"
    },
    "unitTestRunner": {
      "type": "string",
      "enum": ["jest", "none"],
      "description": "Test runner to use for unit tests",
      "default": "jest"
    },
    "nxVersion": {
      "type": "string",
      "description": "*"
    }
  },
  "required": ["name"]
}
